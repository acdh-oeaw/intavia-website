---
import Link from "@/components/link.astro";

interface Props {
	href: string;
	summary: string;
	title: string;
}

const { href, summary, title } = Astro.props;
---

<article class="grid gap-y-4 rounded-b-md border-t-4 border-neutral-300 bg-white p-6 shadow">
	<h3 class="text-xl font-bold leading-tight">
		<Link href={href} tabindex={-1}>
			{title}
		</Link>
	</h3>
	<p class="overflow-wrap-anywhere text-neutral-700">{summary}</p>
	<footer>
		<Link
			class="inline-flex rounded-md bg-brand px-4 py-1.5 text-sm font-semibold shadow transition hover:bg-brand-intent"
			href={href}
		>
			Read more
			<span class="sr-only">about "{title}"</span>
		</Link>
	</footer>
</article>
