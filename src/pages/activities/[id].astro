---
import MainContent from "@/components/main-content.astro";
import PageCard from "@/components/page-card.astro";
import PageTitle from "@/components/page-title.astro";
import { defaultLocale as locale } from "@/config/i18n.config";
import PageLayout from "@/layouts/page-layout.astro";
import { createReader } from "@/lib/content/create-reader";
import { getBaseUrl } from "@/lib/content/get-base-url";
import { getMdxContent } from "@/lib/content/get-mdx-content";

export async function getStaticPaths() {
	const reader = createReader();
	const pages = await reader.collections.activities.all({ resolveLinkedFiles: true });

	return pages.map((page) => {
		const baseUrl = getBaseUrl(reader.config.collections.activities, page.slug);

		return { params: { id: page.slug }, props: { baseUrl, page: page.entry } };
	});
}

const { baseUrl, page } = Astro.props;

const documentTitle = page.title;
const { content, title, image } = page;
const { default: Content } = await getMdxContent(content, locale, baseUrl);
---

<PageLayout locale={locale} title={documentTitle}>
	<MainContent>
		<PageCard image={image}>
			<PageTitle>{title}</PageTitle>
			<div class="prose">
				<Content />
			</div>
		</PageCard>
	</MainContent>
</PageLayout>
